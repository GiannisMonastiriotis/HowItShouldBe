@model HowItShouldBeDone.SongFormViewmodel
@{
    ViewBag.Title = "Song Save";
}

<h2>Song Save</h2>

@using (Html.BeginForm("Save", "Songs"))
{<div class="coll-md-6">
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.song.Title)
            @Html.TextBoxFor(model => model.song.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.song.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.song.Youtube)
            @Html.TextBoxFor(model => model.song.Youtube, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.song.Youtube)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.song.AlbumId)
            @Html.DropDownListFor(model => model.song.AlbumId, new SelectList(Model.Albums, "ID", "Title"), "Select Album", new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(model => model.song.ID)
    <div class="coll-md-6">

        <button type="submit" class="btn btn-default">Save</button>
    </div>

}

@section Scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}

